@charset "UTF-8";
/* pages/detail/detail.wxss */
.detail .title {
  font-size: 50rpx;
  line-height: 1.5em;
  font-family: Arial, sans-serif;
}

.detail .price {
  display: flex;
  /* 使用 flexbox 布局 */
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
  margin: 20rpx 0;
  /* 上下外边距 */
  font-size: 48rpx;
  /* 字体大小 */
  color: #d81515;
  /* 字体颜色 */
  font-weight: bold;
}

.detail .price text:first-child {
  font-size: 48rpx;
  /* 折扣价标签字体大小 */
  margin-right: 10rpx;
  /* 标签与价格之间的间距 */
}

.detail .van-button {
  width: 90%;
  /* 按钮宽度 */
  margin: 10rpx 5%;
  /* 上下外边距 */
  border-radius: 20rpx;
  /* 按钮圆角 */
}

.detail image {
  width: 100%;
  /* 100% 宽度，响应式 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  /* 阴影效果 */
}

.detail .info {
  font-size: 28rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0 50rpx;
}

.detail .info .left text {
  padding-right: 15rpx;
}

.detail .info .right {
  display: flex;
  align-items: center;
  color: var(--themeColor);
  position: relative;
}

.detail .info .right .share {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.detail .info .right text {
  padding-left: 5rpx;
}

.detail .announce {
  margin-top: 30rpx;
  background: var(--globalBgColor2);
  padding: 30rpx;
  font-size: 26rpx;
  color: #888;
}

.detail .announce .top {
  font-size: 30rpx;
  padding-bottom: 15rpx;
}
