.banner{
  padding-top: 30rpx;
}
.banner swiper{
  height: 460rpx;
}
.banner  swiper-item image{
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scrollNav{
  padding: 60rpx 30rpx;

}
.scrollNav scroll-view{
  white-space: nowrap;
}
.scrollNav scroll-view .item{
  display: inline-block;
  padding: 0 25rpx;
  text-align: center;
}
.scrollNav scroll-view .item .pic{
  width: 105rpx;
  height: 105rpx;
}
.scrollNav scroll-view .item .pic image{
  width: 100%;
  height: 100%;
}
.scrollNav scroll-view .item .text{
  font-size: 32rpx;
  color: var(--globalColor);
  padding-top: 10rpx;
}
.scrollNav scroll-view .item:first-child{
  padding-left:0 ;
}
.scrollNav scroll-view .item:last-child{
  padding-right:0 ;
}

.last{
  display: flex;
}
.last .font{
  margin-top: 66rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
}
.last .fire{
  margin-left: 70rpx;
  margin-top: 50rpx;  
}
.last .fire image{
  width: 80rpx;
  height: 80rpx;
}


.news{
  padding: 50rpx 30rpx;
  background-color: var(--globalBgColor2);
}