<view class="product" >
  <view class="pic">
    <image class="image" mode="aspectFill" src="{{item.picPath}}"></image>
  </view>
  <view class="text">
    <view class="title">{{item.name}}</view>
    <view class="info">
      <view class="row">
        <view class="left">类别：</view>
        <view class="right">{{item.type}}</view>
      </view> 
      <view class="row">
        <view class="left">电话：</view>
        <view class="right">{{item.phone}}</view>
      </view> 

      <view class="row">
        <view class="left">价格：</view>
        <view class="right">{{item.price}}元</view>
      </view> 
    </view>
  </view>
</view>